<div class="container">
    <div class="row">

        <div class="container">
            <h2>Burgers that are not eaten!</h2>
            <ul>
                {{!-- {{#each burger}} {{#unless devoured}} {{> burgers/burger-block devoured=true}} {{/unless}} {{/each}} --}}
            </ul>
        </div>

        <div class="container" id='middle'>

            <img src="http://www.craftlakewood.com/images/slideshow/craft-slide.jpg" style="height:300px;width:550px;" alt="Eat it.">
            <h2>Add a Burger</h2>
            <form id='burgerForm' class="create-form">
                <div class="form-group">
                    <label for="ca">Burger Name:</label>
                    <input type="text" id="ca" name="name">
                </div>
                <div class="form-group">
                    <label for="devoured">Devoured?</label><br>
                    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
                    <input type="radio" name="devoured" value="0"> Not devoured :(
                    <br>
                </div>
                <button type="submit">Add Burger</button>
            </form>
        </div>

        <div class="container">
            <h2>Burgers that are eaten!</h2>
            <ul>
                {{!-- {{#each burger}} {{#if devoured}} {{> burgers/burger-block devoured=false}} {{/if}} {{/each}} --}}
            </ul>
        </div>

    </div>
</div>